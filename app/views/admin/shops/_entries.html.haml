%section.panel.panel-default
  %header.panel-heading 门店
  %table.table.table-striped.m-b-none.text-sm.table-bordered
    %thead
      %tr
        %th= Shop.human_attribute_name(:logo)
        %th= Shop.human_attribute_name(:id)
        %th= Shop.human_attribute_name(:name)
        %th= Shop.human_attribute_name(:description)
        %th= Shop.human_attribute_name(:location)
        %th 
    %tbody
      - collection.each do |resource|
        %tr
          %td= image_tag resource.logo_url, width: 50
          %td= resource.id
          %td= link_to resource.name, resource_path(resource)
          %td= resource.description
          %td= resource.location
          %td
            .btn-group
              %button.btn.btn-default.btn-sm.dropdown-toggle{"data-toggle" => "dropdown"}
                %i.fa.fa-pencil
              %ul.dropdown-menu
                %li
                  = link_to resource_path(resource) do
                    %i.fa.fa-search
                    详情
                %li
                  = link_to edit_resource_path(resource) do
                    %i.fa.fa-edit
                    编辑
                %li
                  = link_to resource_path(resource), method: 'delete', data: { confirm: '确认删除吗?' } do
                    %i.fa.fa-trash-o
                    删除
