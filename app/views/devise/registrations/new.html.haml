%section#content.m-t-lg.wrapper-md.animated.fadeInDown
  .container.aside-xxl
    = link_to '蜀面', root_path, class: 'navbar-brand block'
    %section.panel.panel-default.bg-white.m-t-lg
      %header.panel-heading.text-center
        %strong 注册
      = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'panel-body wrapper-lg'}, defaults: { input_html: { class: 'form-control input-lg' } } do |f|
        = f.input :email, autofocus: true, wrapper: :sign_up_in
        = f.input :password, wrapper: :sign_up_in
        = f.input :password_confirmation, wrapper: :sign_up_in
        .checkbox
          %label
            %input{type: "checkbox"}/
            同意我们的
            = link_to '条款', '#'
        = f.button :submit, '注册', class: 'btn btn-primary'
        .line.line-dashed
        %p.text-muted.text-center
          %small 已经有帐号啦?
        = link_to '登录', new_session_path(resource_name), class: 'btn btn-default btn-block'